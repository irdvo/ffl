#/bin/sh

package=ffl
version=0.2.0

dest=${package}-${version}

mkdir ${dest}
mkdir ${dest}/ffl
mkdir ${dest}/test
mkdir ${dest}/html
mkdir ${dest}/forths

cp AUTHORS COPYING NEWS README ChangeLog ${dest}
cp     ffl/*.fs   ${dest}/ffl
cp    test/*.fs   ${dest}/test
cp    html/*.html ${dest}/html
cp -r forths/*    ${dest}/forths

tar cvzf ${package}-${version}.tar.gz ${dest} 

rm -rf ${dest}
